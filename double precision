#include <stdio.h>

int main() {
    double num1, num2, sum;

    // Input the first double-precision floating-point number
    printf("Enter the first double-precision floating-point number: ");
    scanf("%lf", &num1);

    // Input the second double-precision floating-point number
    printf("Enter the second double-precision floating-point number: ");
    scanf("%lf", &num2);

    // Perform addition
    sum = num1 + num2;

    // Output the result
    printf("The sum of %.2lf and %.2lf is %.2lf\n", num1, num2, sum);

    return 0;
}
