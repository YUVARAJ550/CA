#include <stdio.h>

int main() {
    float num1, num2, sum;

    // Input the first floating-point number
    printf("Enter the first floating-point number: ");
    scanf("%f", &num1);

    // Input the second floating-point number
    printf("Enter the second floating-point number: ");
    scanf("%f", &num2);

    // Perform addition
    sum = num1 + num2;

    // Output the result
    printf("The sum of %f and %f is %f\n", num1, num2, sum);

    return 0;
}
